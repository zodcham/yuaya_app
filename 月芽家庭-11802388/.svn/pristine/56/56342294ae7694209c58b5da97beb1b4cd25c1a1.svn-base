appcan.ready(function() {
    var t=getLocVal("help_type");
    if(!t) return;
    $("#div_"+t).removeClass("uhide");
    switch (t) {
        case "read":
            $("#span_title").html("学富五车");
            break;
        case "word":
            $("#span_title").html("博览群书");
            break;
        case "review":
            $("#span_title").html("妙笔生花");
            break;
        case "sign":
            $("#span_title").html("持之以恒");
            break;
        case "test":
            $("#span_title").html("金榜题名");
            break;
        case "game":
            $("#span_title").html("才高八斗");
            break;
    }

})

