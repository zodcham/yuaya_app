            htm+='<div class="ub ub-f1 ub-pc"><img src="'+ $(obj).attr("src") +'" style="height:6em"></div>';
            htm+='<div class="ub ub-f1 ub-pc">'+ $(obj).attr("title") +'</div>';
            htm+='<div class="ub ub-f1 ub-pc ulev-1" style="color:#666;">'+ $(obj).attr("remark") +'</div>';
            htm+='</div>';
            layer.open({
                content: htm
                ,skin: 'showbadge'
              });
        }
        
        
        function openalert() {
