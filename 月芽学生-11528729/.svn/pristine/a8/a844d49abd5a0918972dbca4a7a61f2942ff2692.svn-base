
.book:active{
    background: rgba(0,0,0,0.1);
}
.book-cover {
    background-size:cover;
    -webkit-background-size:cover;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
}
.book-cover:after, .book-back:after {
    content: "";
    width: 3px;
    position: absolute;
    top: 0;
    left: 10px;
    bottom: 0;
    background: rgba(0,0,0,0.06);
    box-shadow: 1px 0 3px rgba(255, 255, 255, 0.1);
}
.book-title{
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    max-height:2.8em;
}

.wrap {
    width: 100%;
    height: 100%;
    position: absolute;
    top: -0.2em;
    left: 0.2em;
    overflow: hidden;
}
.wrap:before {
    content: "";
    display: block;
    border-radius: 1em 1em 0px 0px;
    width: 0.2em;
    height: 0.2em;
    position: absolute;
    right: 3.5em;
    background: #4D6530;
}
.wrap:after {
    content: "";
    display: block;
    border-radius: 0px 1em 1em 0px;
    width: 0.2em;
    height: 0.2em;
    position: absolute;
    right: 0em;
    top: 3.5em;
    background: #4D6530;
}
.ribbon {
    display: inline-block;
    text-align: center;
    width: 6em;
    height: 1.5em;
    line-height: 1.5em;
    position: absolute;
    top: 0.9em;
    right: -1.4em;
    z-index: 2;
    overflow: hidden;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    border: 1px dashed;
    box-shadow: 0 0 0 3px #57DD43, 0px 21px 5px -18px rgba(0,0,0,0.6);
    background: #57DD43;
    font-size: 0.8em;
    color: #FFFFFF;
}
.txt-ellipsis{ 
    overflow:auto;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.content{ 
    overflow:auto;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    word-break: break-all;
}
.click:active{
    background: rgba(0,0,0,0.1);
}
.bookBox{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    z-index:500;
    background: url(../css/icons/bookcover.png) no-repeat;
    background-size: 100% 100%;
}

